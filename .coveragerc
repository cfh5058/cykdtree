[run]
plugins = Cython.Coverage
parallel = True
omit =
    */python?.?/*
    */lib-python/?.?/*.py
    */lib_pypy/_*.py
    */site-packages/ordereddict.py
    */site-packages/nose/*
    */unittest2/*
    *.pxd

[report]
sort = Cover
ignore_errors = True
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover
    # pragma: only cover Python 2
    # pragma: only cover Python 3